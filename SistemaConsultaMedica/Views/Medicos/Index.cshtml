<div class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body table-responsive p-0">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                        <tr>
                            <th style="width: 200px">CRM</th>
                            <th>Nome</th>
                            <th style="width: 40px"></th>
                        </tr>
                        </thead>
                        <tbody>
                            @foreach (var medico in Model)
                            {
                                <tr>
                                    <td>
                                        @medico.CRM
                                    </td>
                                    <td>
                                        @medico.Name
                                    </td>
                                    <td>
                                        <a href="/Medicos/Editar/@medico.Id" class="btn btn-info">Editar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>