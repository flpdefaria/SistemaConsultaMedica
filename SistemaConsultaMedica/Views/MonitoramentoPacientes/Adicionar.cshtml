@model SistemaConsultaMedica.ViewModels.MonitoramentoPaciente.AdicionarMonitoramentoViewModel

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Registrar siniais vitais</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12">
            <form asp-action="Adicionar">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="control-label" asp-for="PressaoArterial"></label>
                            <input asp-for="PressaoArterial" class="form-control" mask="000.000.000-00">
                            <span asp-validation-for="PressaoArterial" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="Temperatura"></label>
                            <input asp-for="Temperatura" class="form-control">
                            <span asp-validation-for="Temperatura" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="FrequenciaCardiaca"></label>
                            <input asp-for="FrequenciaCardiaca" class="form-control">
                            <span asp-validation-for="FrequenciaCardiaca" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="SaturacaoOxigenio"></label>
                            <input asp-for="SaturacaoOxigenio" class="form-control">
                            <span asp-validation-for="SaturacaoOxigenio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label" asp-for="DataAfericao"></label>
                            <input asp-for="DataAfericao" class="form-control">
                            <span asp-validation-for="DataAfericao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-sm btn-primary" type="submit">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>